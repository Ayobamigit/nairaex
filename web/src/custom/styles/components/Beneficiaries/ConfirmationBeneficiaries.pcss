.beneficiaries-modal {
  .cr-email-form__button-wrapper.confirm {
    align-items: unset;
    display: flex;
    flex-direction: column;
  }

  .pg-container.pg-confirm {
    overflow: scroll;
  }

  .cr-confirmation-modal__button-wrapper {
    display: flex;
  }

  .tip__content {
    color: var(--primary-text-color);
    display: flex;
    flex-direction: column;

    &__block--warning {
      span {
        color: var(--system-red)!important;
      }

      input {
        border-color: var(--system-red)!important;
      }
    }

    &__block {
      display: flex;
      flex-direction: column;
      margin-bottom: 20px;

      &__label {
        color: var(--secondary-contrast-cta-color);
        font-size: 10px;
        font-weight: bolt;
        line-height: 15px;
      }
    }
  }
}
